<section class="tab activity-{{ tab.id }} {{ tab.cssClass }}" data-tab="{{ tab.id }}" data-group="{{ tab.group }}">
    <fieldset>
        <legend><label> Configuration </label></legend>

        <div class="form-group stacked">
            <label>{{localize "DND5E.ACTIVITY.FIELDS.teleport.maxTargets.label"}}</label>
            <div class="form-fields">
                <input type="number" name="maxTargets" min="0" value="{{ maxTargets }}" placeholder="Max Targets">
            </div>
            <p class="hint">{{localize "DND5E.ACTIVITY.FIELDS.teleport.maxTargets.hint"}}</p>
        </div>

        <div class="form-group">
            <label>{{localize "DND5E.ACTIVITY.FIELDS.teleport.targetSelf.label"}}</label>
            <div class="form-fields">
                <dnd5e-checkbox name="targetSelf" {{#if targetSelf}}checked{{/if}}></dnd5e-checkbox>
            </div>
            <p class="hint">{{localize "DND5E.ACTIVITY.FIELDS.teleport.targetSelf.hint"}}</p>
        </div>

        <div class="form-group indented">
            <label>{{localize "DND5E.ACTIVITY.FIELDS.teleport.onlyTargetSelf.label"}}</label>
            <div class="form-fields">
                {{#if (and targetSelf (eq maxTargets 1))}}
                <dnd5e-checkbox name="onlyTargetSelf" {{#if onlyTargetSelf}}checked{{/if}}></dnd5e-checkbox>
                {{else}}
                <dnd5e-checkbox name="onlyTargetSelf" disabled></dnd5e-checkbox>
                {{/if}}
            </div>
            <p class="hint">{{localize "DND5E.ACTIVITY.FIELDS.teleport.onlyTargetSelf.hint"}}</p>
        </div>

        <div class="form-group stacked">
            <label>{{localize "DND5E.ACTIVITY.FIELDS.teleport.targetRadius.label"}}</label>
            <div class="form-fields">
                <input type="number" name="targetRadius" min="0" value="{{ targetRadius }}" placeholder="Target Radius">
            </div>
            <p class="hint">{{localize "DND5E.ACTIVITY.FIELDS.teleport.targetRadius.hint"}}</p>
        </div>

        <div class="form-group stacked">
            <label>{{localize "DND5E.ACTIVITY.FIELDS.teleport.teleportDistance.label"}}</label>
            <div class="form-fields">
                <input type="number" name="teleportDistance" min="0" value="{{ teleportDistance }}" placeholder="Teleport Distance">
            </div>
            <p class="hint">{{localize "DND5E.ACTIVITY.FIELDS.teleport.teleportDistance.hint"}}</p>
        </div>
    </fieldset>
    <fieldset>
        <legend><label> Placement </label></legend>

        <div class="form-group">
            <label>{{localize "DND5E.ACTIVITY.FIELDS.teleport.manualPlacement.label"}}</label>
            <div class="form-fields">
                {{#if (or keepArrangement (eq maxTargets 1))}}
                <dnd5e-checkbox name="manualPlacement" disabled></dnd5e-checkbox>
                {{else}}
                <dnd5e-checkbox name="manualPlacement" {{#if manualPlacement}}checked{{/if}}></dnd5e-checkbox>
                {{/if}}
            </div>
            <p class="hint">{{localize "DND5E.ACTIVITY.FIELDS.teleport.manualPlacement.hint"}}</p>
        </div>

        <div class="form-group stacked indented">
            <label>{{localize "DND5E.ACTIVITY.FIELDS.teleport.manualRadius.label"}}</label>
            <div class="form-fields">
                {{#if manualPlacement}}
                <input type="number" name="manualRadius" min="0" value="{{ manualRadius }}" placeholder="Placement Radius">
                {{else}}
                <input type="number" name="manualRadius" value="0" placeholder="Placement Radius" disabled>
                {{/if}}
            </div>
            <p class="hint">{{localize "DND5E.ACTIVITY.FIELDS.teleport.manualRadius.hint"}}</p>
        </div>

        <div class="form-group">
            <label>{{localize "DND5E.ACTIVITY.FIELDS.teleport.keepArrangement.label"}}</label>
            <div class="form-fields">
                {{#if (or manualPlacement (eq maxTargets 1))}}
                <dnd5e-checkbox name="keepArrangement" disabled></dnd5e-checkbox>
                {{else}}
                <dnd5e-checkbox name="keepArrangement" {{#if keepArrangement}}checked{{/if}}></dnd5e-checkbox>
                {{/if}}
            </div>
            <p class="hint">{{localize "DND5E.ACTIVITY.FIELDS.teleport.keepArrangement.hint"}}</p>
        </div>

        <div class="form-group stacked">
            <label>{{localize "DND5E.ACTIVITY.FIELDS.teleport.clusterRadius.label"}}</label>
            <div class="form-fields">
                {{#if (or manualPlacement keepArrangement (eq maxTargets 1))}}
                <input type="number" name="clusterRadius" value="0" placeholder="Cluster Radius" disabled>
                {{else}}
                <input type="number" name="clusterRadius" min="0" value="{{ clusterRadius }}" placeholder="Cluster Radius">
                {{/if}}
            </div>
            <p class="hint">{{localize "DND5E.ACTIVITY.FIELDS.teleport.clusterRadius.hint"}}</p>
        </div>
    </fieldset>
</section>
